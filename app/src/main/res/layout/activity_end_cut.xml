<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".EndCut"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/recordsave"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="32sp"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:text="Please Enter Data"
            android:textStyle="italic"
            android:layout_weight="10"/>
        <EditText
            android:id="@+id/id_customername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Customer Name"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_weight="5"/>

        <EditText
            android:id="@+id/id_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Cut"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:enabled="false"
            android:layout_weight="5"/>
        <EditText
            android:id="@+id/id_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Weight"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_weight="5"
            android:inputType="number"/>
        <EditText
            android:id="@+id/id_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rate"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_weight="5"
            android:inputType="number"/>
        <Spinner
            android:id="@+id/id_sellername"
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:hint="Seller Name"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:autofillHints="Seller Name"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineSpotShadowColor="#FFFFFF"
            android:layout_weight="7"/>
        <TextView
            android:id="@+id/id_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_weight="10"/>

        <EditText
            android:id="@+id/id_takeAmount"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Take Amount"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_weight="5"/>
        <TextView
            android:id="@+id/id_returnamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_weight="10"/>

        <EditText
            android:id="@+id/id_paidAmount"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Paid Amount"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_weight="5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="50"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="20">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:onClick="Calculation"
                android:layout_weight="25"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:onClick="Save"
                android:layout_weight="25"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bill"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="100">
        <LinearLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="50">
            <ImageView
                android:layout_weight="5"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:src="@drawable/logo"
                android:layout_marginLeft="32sp"/>
            <TextView
                android:layout_weight="45"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:text="@string/app_name"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:gravity="center"
android:layout_marginRight="32sp"/>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_weight="20"
    android:weightSum="30">
        <TextView
            android:id="@+id/time"
            android:layout_weight="5"
            android:layout_height="32sp"
            android:layout_width="wrap_content"
            android:width="32sp"
            android:text="Date"
            android:textColor="@color/white"
            android:scaleType="fitXY"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            />
    <TextView
        android:layout_weight="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="italic|bold"/>
        <TextView
            android:layout_weight="5"
            android:id="@+id/date"
            android:layout_height="32sp"
            android:layout_width="wrap_content"
            android:text="CR Sheet"
            android:textSize="16sp"
            android:textColor="@color/white"

            android:gravity="center"

            android:textStyle="bold"
            />
</LinearLayout>

        <GridLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5"
            android:paddingBottom="64dp"
            android:layout_weight="60">

            <TextView
                android:layout_height="32sp"
                android:text="Customer Name"
                android:gravity="center"
                android:textSize="16sp"
                android:scaleType="fitXY"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="2"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/custom_name"
                android:layout_height="32sp"
                android:text="CR Sheet"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:scaleType="fitXY"
                android:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:layout_columnWeight="2"
                android:textStyle="bold"
                />
            <TextView
                android:layout_height="32sp"
                android:text="Seller Name"
                android:textSize="16sp"
                android:scaleType="fitXY"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/sellername"
                android:layout_height="32sp"
                android:text="CR Sheet"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:scaleType="fitXY"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                />
            <TextView
                android:layout_height="32sp"
                android:text="Weight"
                android:textSize="16sp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/weight"
                android:layout_height="32sp"
                android:text="CR Sheet"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:scaleType="fitXY"
                android:layout_gravity="fill_horizontal"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                />
            <TextView
            android:layout_height="32sp"
            android:text="Rate"
                android:textSize="16sp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            />
            <TextView
                android:id="@+id/rate"
                android:layout_height="32sp"
                android:text="CR Sheet"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:scaleType="fitXY"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                />
            <TextView
                android:layout_height="32sp"
                android:text="Amount"
                android:gravity="center"
                android:scaleType="fitXY"
                android:textSize="16sp"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/amount"
                android:layout_height="32sp"
                android:text="CR Sheet"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                />

            <TextView
                android:layout_height="32sp"
                android:text="Paid Amount"
                android:gravity="center"
                android:scaleType="fitXY"
                android:textSize="16sp"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/paid"
                android:layout_height="32sp"
                android:text="CR Sheet"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                />

            <TextView
                android:layout_height="32sp"
                android:text="Credit"
                android:gravity="center"
                android:scaleType="fitXY"
                android:textSize="16sp"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/credit"
                android:layout_height="32sp"
                android:text="CR Sheet"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                />
            <TextView
                android:layout_height="32sp"
                android:text="Balance"
                android:gravity="center"
                android:scaleType="fitXY"
                android:textSize="16sp"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/balance"
                android:layout_height="32sp"
                android:text="CR Sheet"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:textStyle="bold"
                />
        </GridLayout>
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:onClick="back"/>
    </LinearLayout>

</RelativeLayout>